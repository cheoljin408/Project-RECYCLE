<script>
    function resetModal() {
        $('.wrong-ID').hide();
        $('.wrong-PW').hide();
        $('input[name=userID]').val('');
        $('input[name=userPW]').val('');
    }
    /*
        $(".modal").on("show.bs.modal", function(){
          $('.worng-ID').hide();
          $('.worng-PW').hide();
        });
    */

    function loginCheck() {
        $.ajax({
            type: 'POST',
            url: '/auth',
            data: {
                userID: $('input[name=userID]').val(),
                userPW: $('input[name=userPW]').val()
            },
            success: function (data) {
                if (data === 'ID') {
                    console.log(data);
                    $('.wrong-ID').show();
                    $('.wrong-PW').hide();
                } else if (data === 'PW') {
                    console.log(data);
                    $('.wrong-ID').hide();
                    $('.wrong-PW').show();
                } else if (data === 'OK') {
                    $('.wrong-ID').hide();
                    $('.wrong-PW').hide();
                    $('#loginModalForm').submit();
                }
            }
        });
    }

    //query string에서 id값 가져오는 함수
    function getParameterByName(name) {
        name = name.replace(/[\[]/, "\\[").replace(/[\]]/, "\\]");
        var regex = new RegExp("[\\?&]" + name + "=([^&#]*)"),
            results = regex.exec(location.search);
        return results === null ? "" : decodeURIComponent(results[1].replace(/\+/g, " "));
    }

    var postid = getParameterByName('id');

    console.log(postid);

    $.ajax({
        type: 'POST',
        url: '/getHashtag',
        data: {
            postid: postid
        },
        success: function (data) {
            console.log(data);

            var tagArray = new Array();
            var plus = "";

            if (!data) {
                console.log(data);
            }
            else {
                for (var i = 1; i < 6; i++) {
                    if (eval("data.tag" + i) == "null") {
                        break;
                    }
                    else {
                        plus += `<button>#${eval('data.tag' + i)}</button>`;
                    }
                }

                document.getElementById('hashTag').innerHTML = plus;
            }
        }
    });

    $.ajax({
        type: 'POST',
        url: '/getTime',
        data: {
            postid: postid
        },
        success: function (data) {
            console.log(data);
            console.log(data['time']);

            var date = data['time'].substring(0, 10);

            document.getElementById('postDate').innerHTML = date;
        }
    });

    $('#send').click(function () {
        var toID = $('.userID')[0]['innerText'].substring(1);
        console.log(toID);
        $.ajax({
            type: 'POST',
            url: '/send_msg',
            data: {
                toID: toID,
                msgText: $('textarea[name="msg_text"]').val()
            },
            success: function (data) {
                alert(data);
            }
        });
    });

    $(window).scroll(function () {
        if ($(this).scrollTop() > 50) {
            $('.msg').css("bottom", "40px");
            $('.msg').css("transition-duration", "1s");
        } else {
            $('.msg').css("bottom", "-500px");
        }
    });



